@model IEnumerable<Customer>

<div class="container p-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Add New Customer</a>
        </div>
    </div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>
                Customer Id
            </td>
            <td>
                First Name
            </td>
            <td>
                Last Name
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>
                    @customer.CustomerId
                </td>
                <td>
                    @customer.FirstName
                </td>
                <td>
                    @customer.LastName
                </td>
            </tr>
        }
    </tbody>
</table>

</div>